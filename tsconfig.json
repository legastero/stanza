{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": ["dom", "es2018"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist/cjs",
        "strict": true,
        "target": "es2018",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "types": [
            "node",
            "events",
            "async",
            "janus-gateway"
        ]
    },
    "include": ["src", "typings"],
    "exclude": ["dist"]
}
